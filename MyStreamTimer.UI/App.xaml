<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyStreamTimer.UI.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#39a8dd</Color>
            <Color x:Key="WindowBackground">#f5f5f5</Color>
            <Style x:Key="ButtonMainStyle" TargetType="Button">
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="BackgroundColor" Value="#f6f6f6"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="BorderWidth" Value="2"/>
                <Setter Property="BorderColor" Value="#d8d8d8"/>
            </Style>
             <Style x:Key="LabelHyperlink" TargetType="Label">
                <Setter Property="TextColor" Value="Blue" />
                <Setter Property="TextDecorations" Value="Underline"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>