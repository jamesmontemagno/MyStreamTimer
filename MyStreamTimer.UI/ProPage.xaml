<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MyStreamTimer.UI.ProPage">
    <ContentPage.Content>

        <StackLayout Padding="20">

            <Label Text="{Binding ProPrice}"/>
            <Label IsVisible="{Binding IsNotPro}" Text="Upgrade to Pro to support My Stream Timer, unlock thanks badge, and support independent development."/>

            <Label IsVisible="{Binding IsPro}" Text="YOU ARE PRO!"/>

            <Button IsVisible="{Binding IsNotPro}"
                    IsEnabled="{Binding IsNotBusy}"
                    HorizontalOptions="Center"
                    Padding="5"
                    Text="Purchase Pro"
                    Command="{Binding BuyCommand}"/>

            <Button IsVisible="{Binding IsNotPro}"
                    IsEnabled="{Binding IsNotBusy}"
                    HorizontalOptions="Center"
                    Padding="5"
                    Text="Restore Purchase"
                    Command="{Binding RestoreCommand}"/>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
